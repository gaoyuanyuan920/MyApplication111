<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ch1_1_11"
        android:layout_width="200dp"
        android:layout_height="100dp" />

    <Button
        android:id="@+id/ch1_1_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+(内部匿名)" />

    <Button
        android:id="@+id/ch1_1_13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-（内部类）" />

    <Button
        android:id="@+id/ch1_1_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*（直接实现）" />

    <Button
        android:id="@+id/ch1_1_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="xml"
        android:text="/（XML调用）" />

    <EditText
        android:id="@+id/ch1_1_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="please a null" />

    <EditText
        android:id="@+id/ch1_1_17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="please a null" />
</LinearLayout>

